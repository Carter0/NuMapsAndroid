<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DataFragment" android:id="@+id/dataFragment">

    <TextView
            android:layout_width="735dp"
            android:layout_height="235dp"
            android:text="PLTitle"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/dataTitle" android:textStyle="bold" android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Google Maps"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/dataTitle" android:id="@+id/dataButton"/>

    <TextView
            android:text="Here is my sample text."
            android:layout_width="447dp"
            android:layout_height="110dp"
            android:layout_gravity=""
            android:id="@+id/dataDescription" android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="@+id/dataTitle"
            android:textSize="20dp" android:textColor="@color/colorPrimary"
            android:layout_marginStart="4dp" app:layout_constraintStart_toStartOf="@+id/dataTitle"/>


</androidx.constraintlayout.widget.ConstraintLayout>